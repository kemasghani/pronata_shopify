{%- liquid
  assign video_url = section.settings.video_url.sources[1].url
  assign fallback_image = section.settings.fallback_image
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign cta_text = section.settings.cta_text
  assign cta_link = section.settings.cta_link
-%}

{{ 'section-hero-video.css' | asset_url | stylesheet_tag }}

<section class="hero-video" data-section-id="{{ section.id }}">
  <div class="hero-video__container">
    {%- if video_url != blank -%}
      <video
        class="hero-video__video desktop-only"
        autoplay
        muted
        loop
        playsinline
        poster="{{ fallback_image | image_url: width: 1920 }}"
      >
        <source src="{{ video_url }}" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    {%- endif -%}

    {%- if fallback_image != blank -%}
      <picture class="hero-video__image mobile-only">
        <!-- Mobile -->
        <source
          media="(max-width: 767px)"
          srcset="
            {{ fallback_image | image_url: width: 480 }} 480w,
            {{ fallback_image | image_url: width: 768 }} 768w,
            {{ fallback_image | image_url: width: 960 }} 960w
          "
          sizes="100vw"
        >

        <!-- Tablet -->
        <source
          media="(max-width: 1199px)"
          srcset="
            {{ fallback_image | image_url: width: 800 }} 800w,
            {{ fallback_image | image_url: width: 1200 }} 1200w,
            {{ fallback_image | image_url: width: 1600 }} 1600w
          "
          sizes="100vw"
        >

        <!-- Desktop fallback -->
        <img
          src="{{ fallback_image | image_url: width: 1920 }}"
          srcset="
            {{ fallback_image | image_url: width: 1280 }} 1280w,
            {{ fallback_image | image_url: width: 1920 }} 1920w,
            {{ fallback_image | image_url: width: 2560 }} 2560w
          "
          sizes="100vw"
          alt="{{ fallback_image.alt | default: shop.name }}"
          width="{{ fallback_image.width }}"
          height="{{ fallback_image.height }}"
          loading="lazy"
        >
      </picture>
    {%- endif -%}

    <div class="hero-video__overlay"></div>

    <div class="hero-video__content">
      {%- if heading != blank -%}
        <h1 class="hero-video__heading">{{ heading }}</h1>
      {%- endif -%}

      {%- if subheading != blank -%}
        <p class="hero-video__subheading">{{ subheading }}</p>
      {%- endif -%}

      {%- if cta_text != blank and cta_link != blank -%}
        <a href="{{ cta_link }}" class="hero-video__cta btn btn--primary">
          {{ cta_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Video Banner",
  "settings": [
    {
      "type": "video",
      "id": "video_url",
      "label": "Hero Video",
      "info": "Upload a video file for the hero background"
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback Image",
      "info": "Image shown on mobile devices and as video poster"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to BricksActive"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our premium collection"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Video Banner"
    }
  ]
}
{% endschema %}
